{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "outDir": "./dist/cjs",
    "declaration": true,
    "declarationDir": "./types",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "types": ["jest"],
    "lib": ["esnext"],
    "sourceMap": true,
    "inlineSources": true,
    "importHelpers": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/__tests__/**/*"]
}
