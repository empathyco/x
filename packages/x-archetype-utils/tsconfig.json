{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "esnext"],
    "rootDir": "./src",
    "module": "ESNext",
    "moduleResolution": "node",
    "types": ["jest"],
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
