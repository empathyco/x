{
  "name": "@empathy/x-components",
  "main": "./core/index.js",
  "module": "./core/index.js",
  "types": "./core/index.d.ts",
  "version": "2.0.0-alpha.5",
  "sideEffects": [
    "./tests/**/*",
    "**/*.scss",
    "**/*.vue"
  ],
  "scripts": {
    "serve": "vue-cli-service serve --skip-plugins eslint",
    "build": "ts-node --project ./build/tsconfig.json ./build/build.ts && npm pack ./dist",
    "build:website": "vue-cli-service build",
    "gen:docs": "rimraf ./docs && npm run gen:typescript-docs && npm run gen:component-docs",
    "gen:typescript-docs": "api-documenter markdown --input-folder dist/report --output-folder docs/API-reference/api",
    "gen:component-docs": "vue-docgen",
    "test:unit": "vue-cli-service test:unit",
    "test:unit-coverage": "vue-cli-service test:unit --coverage",
    "test:unit-watch": "vue-cli-service test:unit --watch",
    "test:e2e": "vue-cli-service test:e2e",
    "test:e2e:ci": "vue-cli-service test:e2e --headless --browser chrome",
    "test": "npm run lint && npm run test:unit && npm run test:e2e:ci",
    "cypress:open": "cypress open",
    "lint": "vue-cli-service lint build src tests",
    "commit": "git-cz",
    "release": "standard-version --no-verify",
    "release:alpha": "standard-version --no-verify --prerelease alpha"
  },
  "dependencies": {
    "@empathy/logger": "^1.1.0",
    "@empathy/search-adapter": "^5.0.0",
    "@empathy/search-types": "^6.0.0",
    "@empathy/storage-service": "^1.3.0",
    "@empathybroker/deep-merge": "^1.2.1",
    "magic-string": "~0.25.7",
    "reflect-metadata": "~0.1.13",
    "rxjs": "~6.5.4",
    "tslib": "~1.11.1",
    "vue": "^2.6.0",
    "vue-class-component": "~7.1.0",
    "vue-property-decorator": "~8.3.0",
    "vue-runtime-helpers": "~1.1.2",
    "vuex": "^3.0.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "~7.0.0-rc.0",
    "@cypress/browserify-preprocessor": "~3.0.1",
    "@cypress/webpack-preprocessor": "~5.1.1",
    "@empathy/eslint-plugin-x": "^1.2.0",
    "@microsoft/api-documenter": "~7.7.12",
    "@microsoft/api-extractor": "~7.7.8",
    "@rollup/plugin-buble": "~0.21.3",
    "@rollup/plugin-commonjs": "~11.0.1",
    "@testing-library/jest-dom": "^5.11.1",
    "@types/autoprefixer": "~9.6.1",
    "@types/jest": "~25.2.3",
    "@types/node": "~12.12.0",
    "@types/testing-library__jest-dom": "^5.9.1",
    "@vue/cli-plugin-e2e-cypress": "~4.5.10",
    "@vue/cli-plugin-eslint": "~4.4.4",
    "@vue/cli-plugin-typescript": "~4.4.1",
    "@vue/cli-plugin-unit-jest": "~4.1.0",
    "@vue/cli-plugin-vuex": "~4.1.0",
    "@vue/cli-service": "~4.4.4",
    "@vue/test-utils": "^1.0.3",
    "autoprefixer": "~9.7.4",
    "commitizen": "~4.0.3",
    "cypress": "~6.5.0",
    "cypress-cucumber-preprocessor": "~4.0.0",
    "cypress-plugin-tab": "~1.0.5",
    "cz-conventional-changelog": "~3.1.0",
    "glob": "~7.1.6",
    "lint-staged": "~10.0.7",
    "rollup": "~1.31.0",
    "rollup-plugin-copy": "~3.4.0",
    "rollup-plugin-delete": "~1.2.0",
    "rollup-plugin-postcss": "~2.0.3",
    "rollup-plugin-scss": "~2.1.0",
    "rollup-plugin-sourcemaps": "~0.5.0",
    "rollup-plugin-typescript2": "~0.25.3",
    "rollup-plugin-vue": "~5.1.5",
    "sass": "~1.24.0",
    "sass-loader": "~8.0.0",
    "ts-node": "~8.6.2",
    "typescript": "~3.8.3",
    "vue-docgen-cli": "~4.13.1",
    "vue-router": "~3.4.3",
    "vue-template-compiler": "~2.6.10"
  },
  "prettier": "@empathy/eslint-plugin-x/prettier-config",
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "./**/*.{vue,ts,tsx}": "vue-cli-service lint"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
