{
  "compilerOptions": {
    "allowJs": true,
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "types": ["node"],
    "paths": {},
    "lib": ["esnext", "dom", "scripthost"]
  },
  "include": ["**/*.ts", "docgen/templates/*.js"],
  "exclude": ["node_modules"]
}
