{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "types": ["tailwindcss"],
    "strict": true,
    "declaration": true,
    "importHelpers": true,
    "inlineSources": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}
