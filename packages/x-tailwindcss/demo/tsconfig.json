{
  "extends": "../tsconfig.esm.json",
  "rootDir": ".",
  "compilerOptions": {
    "outDir": "./dist",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "declaration": true,
    "declarationDir": "./dist/types",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  },
  "include": ["./src/**/*.ts", "./src/**/*.vue", "vite.config.ts", "tailwindcss-nesting.d.ts"]
}
