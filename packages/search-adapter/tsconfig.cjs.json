{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "declarationDir": "./types",
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "./dist/cjs"
  },
  "exclude": [
    "**/__mocks__/**/*",
    "**/__fixtures__/**/*",
    "**/__tests__/**/*",
    "node_modules"
  ]
}
