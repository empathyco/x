{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers": true,
    "strict": true,
    "types": ["tailwindcss"],
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "declarationDir": "./types",
    "outDir": "./dist/cjs"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/main.ts"]
}
