{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "outDir": "./dist/cjs",
    "declaration": true,
    "declarationDir": "./types",
    "sourceMap": true,
    "moduleResolution": "node",
    "strict": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "types": ["jest"],
    "lib": ["dom", "esnext"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/__tests__/**"]
}
