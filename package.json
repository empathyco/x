  "scripts": {
    "postinstall": "lerna bootstrap --hoist",
    "build": "lerna run build",
    "lint": "lerna run nope",
    "test": "lerna run test:e2e:ci",
    "prepare-release:stable": "lerna version --conventional-commits --conventional-graduate --no-git-tag-version --yes",
